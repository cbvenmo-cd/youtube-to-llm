# Database Configuration (Supabase)
# Get these values from your Supabase project settings
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# YouTube API Configuration
# Get your API key from Google Cloud Console
YOUTUBE_API_KEY="your_youtube_data_api_v3_key_here"

# Application Configuration
# Generate a secure random string for API authentication
API_KEY="your_secure_api_key_here"

# Server port (optional, defaults to 8080)
PORT=8080

# Environment (development, production)
NODE_ENV=development

# Authentication Mode (development or production)
AUTH_MODE=production

# Session duration in days
SESSION_DURATION_DAYS=90

# Allow mode switching (should be false in production)
ALLOW_MODE_SWITCHING=false

# Fly.io deployment flag
FLY_DEPLOY=false
