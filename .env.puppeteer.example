# Puppeteer Environment Configuration
# Copy this file to .env.puppeteer and update with your values

# Base URL for the application
PUPPETEER_BASE_URL=http://localhost:8080

# API Key for production mode authentication
PUPPETEER_API_KEY=your-api-key-here

# Browser settings
PUPPETEER_HEADLESS=false
PUPPETEER_SLOW_MO=0

# Timeout settings (in milliseconds)
PUPPETEER_TIMEOUT=30000

# Screenshot settings
PUPPETEER_SCREENSHOT_ON_ERROR=true
PUPPETEER_SCREENSHOT_PATH=./puppeteer-screenshots

# Cookie storage
PUPPETEER_COOKIE_PATH=./puppeteer-data

# Debug settings
PUPPETEER_DEBUG=false
PUPPETEER_VERBOSE=false
